                            #if(!${user.userIntro})
                                <p></p>
                            #else
                                <p>${user.userIntro}</p>
                            #end
                        </a>
                    </li>
                #end
            </ul>
        </section>
        <!-- Actions -->
        <section>
            <ul class="actions vertical">
                #if(${sessionUser})
                    <li>
                        <button id="logout" class="button big fit">Log Out</button>
                    </li>
                #end
            </ul>
        </section>

    </section>
