</head>
<body>

<!-- Wrapper -->
<div id="wrapper">

    <!-- Header -->
    <header id="header">
        <h1><a href="/mainHome/${pageInfo.pageNum}">慵懒时光</a></h1>
        <nav class="links">
            <ul>
                <li><a href="/mainHome/1">主页</a></li>
                <li><a href="#">站长博客</a></li>
                #if(!${sessionUser})
                    <li><a href="/user/logInPage">登录</a></li>
                #end

                #if(${sessionUser})
                    <li><a href="#">个人博客</a></li>
                    <li><a href="#">个人资料</a></li>
                    <li><a href="#">博客管理</a></li>
                    <li><a href="#">博客标签</a></li>
                #end
            </ul>
        </nav>
        <nav class="main">
            <ul>
                <li class="search">
                    <a class="fa-search" href="#search">Search</a>
                    <form id="search" method="get" action="#">
                        <input type="text" name="query" placeholder="博客搜索"/>
                    </form>
                </li>
                <li class="menu">
                    <a class="fa-bars" href="#menu">Menu</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Menu -->
    <section id="menu">

        <!-- Search -->
        <section>
            <form class="search" method="get" action="#">
                <input type="text" name="query" placeholder="博主搜索"/>
            </form>
        </section>

        <!-- Links -->
        <section>
            <h1 style="color:darkred">热门博主</h1>
            <ul class="links">
                #foreach(${user} in ${users})
                    <li>
                        <a href="#">
                            <h3>${user.nickName}</h3>
                            #if(!${user.userIntro})
                                <p></p>
                            #else
                                <p>${user.userIntro}</p>
                            #end
                        </a>
                    </li>
                #end
            </ul>
        </section>
        <!-- Actions -->
        <section>
            <ul class="actions vertical">
                #if(${sessionUser})
                    <li>
                        <button id="logout" class="button big fit">Log Out</button>
                    </li>
                #end
            </ul>
        </section>

    </section>